{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Packer Log</h1>
    </div>
    
    <p>Showing performance for: {{ startDate|date('m/d/Y') }} to {{ endDate|date('m/d/Y') }}</p>

    <br>
    
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Packer</th>
                <th>Total Packages</th>
                <th>Total Items</th>
            </tr>
        </thead>
        <tbody>
            {% for packer in packerData %}
            <tr>
                <td>{{ packer.userId }}</td>
                <td>{{ packer.totalPackages }}</td>
                <td>{{ packer.totalItems }}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
