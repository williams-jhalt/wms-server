{% extends 'base.html.twig' %}

{% block pageHeader %}
    {{ knp_menu_render('AppBundle:Builder:productMenu', {'currentClass': 'active', 'template': 'AppBundle:Menu:knp_menu.html.twig'}) }}    
{% endblock %}

{% block body %}

    <h1>Committed Products</h1>

    <form action="{{ path('product_lookup_committed') }}" method="get">
        <input type="text" name="searchTerms">
        <button type="submit">Search</button>
    </form>

    <br>

    <table class="table table-striped table-responsive">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Bin</th>
                <th>Committed</th>
            </tr>
        </thead>
        <tbody>

            {% for item in items %}

                <tr>
                    <td>{{ item.itemNumber }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.binLocation }}</td>
                    <td>{{ item.committedQuantity }}</td>
                </tr>

            {% endfor %}

        </tbody>

    </table>

    <p><a href="{{ path('product_lookup_committed', {page: page+1}) }}">More</a></p>

    <p><a href="{{ path('product_lookup_index') }}">Back</a></p>

{% endblock %}
