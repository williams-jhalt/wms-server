{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            var table = $('#shipmentsTable').DataTable({
                "processing": true,
                "serverSide": true,
                "ajax": Routing.generate('shipments_list')
            });
            
            $("input[name='is_shipped']").click(function() {
                table.ajax.url(Routing.generate('shipments_list', {is_shipped: this.checked, is_picked: $("input[name='is_picked']").checked})).load();
            });
            
            $("input[name='is_picked']").click(function() {
                table.ajax.url(Routing.generate('shipments_list', {is_picked: this.checked, is_shipped: $("input[name='is_shipped']").checked})).load();
            });
        });
    </script>
{% endblock %}


{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Shipments</h1>
    </div>

    <br>

    <form class="form">
        <div class="checkbox">
            <label>
                <input type="checkbox" name="is_shipped" value="true">
                Only Show Shipped Orders
            </label>
        </div>
        <div class="checkbox">
            <label>
                <input type="checkbox" name="is_picked" value="true">
                Only Show Picked Orders
            </label>
        </div>
    </form>

    <br>

    <h2>Open Shipments</h2>

    <table id="shipmentsTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Manifest ID</th>
                <th>Order Date</th>
                <th>Picked</th>
                <th>Shipped</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Manifest ID</th>
                <th>Order Date</th>
                <th>Picked</th>
                <th>Shipped</th>
            </tr>
        </tfoot>
    </table>

{% endblock %}
