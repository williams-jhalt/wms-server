{% extends 'base.html.twig' %}
{% block body %}
    <br><br>
    <div class="container">
        <form class="form-inline" action="{{ path('shipping_review') }}" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="ucc" placeholder="Scan UCC...">
            </div>
            <div class="form-group">
                <select class="form-control" name="printer">
                    {% for printer in printers %}
                        <option {% if selectedPrinter == printer %}selected{% endif %} value="{{ printer }}">{{ printer }}</option>
                    {% endfor %}
                </select>
            </div>
            <button class="btn btn-default" type="submit">Submit</button>
        </form>
    </div>

    <div class="panel panel-default">
        <div class="panel-body">
            {{ shipment.order }}
            {{ shipment.firstName }} {{ shipment.lastName }}
        </div>
    </div>
{% endblock %}