{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $("input[name='manifestId']").focus();
        });
    </script>
{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Carton Lookup</h1>
    </div>

    <br>

    <ul class="nav nav-tabs">
        <li class="{% if company == 'WTC' %}active{% endif %}">
            <a href="{{ path('carton_index', {company: 'WTC'}) }}">
                Williams Trading
            </a>
        </li>
        <li class="{% if company == 'MFG' %}active{% endif %}">
            <a href="{{ path('carton_index', {company: 'MFG'}) }}">
                MFG
            </a>
        </li>
    </ul>

    <br>

    <form class="form-inline" action="{{ path('carton_view', {company: company}) }}" method="get">
        <div class="form-group">
            <input class="form-control" type="text" name="manifestId" placeholder="Manifest ID">
        </div>
        <button class="btn btn-default" type="submit">Load</button>
    </form>

{% endblock %}
