{% extends 'base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('#committedItems').DataTable({
                responsive: true,
                order: [[3, 'desc']]
            });
        });
    </script>
{% endblock %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Committed Products</h1>
    </div>

    <br>

    <table id="committedItems" class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>SKU</th>
                <th>Name</th>
                <th>Bin</th>
                <th>Committed</th>
            </tr>
        </thead>
        <tbody>

            {% for item in items %}

                <tr>
                    <td>{{ item.itemNumber }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.binLocation }}</td>
                    <td>{{ item.quantityCommitted }}</td>
                </tr>

            {% endfor %}

        </tbody>

    </table>

    <p><a href="{{ path('product_lookup_index') }}">Back</a></p>

{% endblock %}
