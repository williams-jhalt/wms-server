{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Sales Orders</h1>
    </div>

    <br>

    <h2>Viewing Order {{ order.orderNumber }}</h2>
    
    <h3>Summary</h3>
    
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Total Volume</th>
                <td>{{ order.totalVolume }}</td>
            </tr>
            <tr>
                <th>Total Weight</th>
                <td>{{ order.totalWeight }}</td>
            </tr>
        </tbody>        
    </table>

    <h3>Cartons</h3>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Tracking Number</th>
                <th>Items</th>
                <th>Dimensions</th>
            </tr>
        </thead>
        <tbody>
            {% for carton in order.cartons %}
                <tr>
                    <td>{{ carton.trackingNumber }}</td>
                    <td>
                        <table class="table table-bordered table-condensed table-striped">
                            <thead>
                                <tr>
                                    <th>Item Number</th>
                                    <th>Quantity Shipped</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in carton.items %}
                                    <tr>
                                        <td>{{ item.itemNumber }}</td>
                                        <td>{{ item.quantity }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <table class="table table-bordered table-condensed table-striped">
                            <tbody>
                                <tr>
                                    <th>Height</th>
                                    <td>{{ carton.packageHeight }}</td>
                                </tr>
                                <tr>
                                    <th>Length</th>
                                    <td>{{ carton.packageLength }}</td>
                                </tr>
                                <tr>
                                    <th>Width</th>
                                    <td>{{ carton.packageWidth }}</td>
                                </tr>
                                <tr>
                                    <th>Weight</th>
                                    <td>{{ carton.shippingWeight }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock %}
