{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Sales Orders</h1>
    </div>
    
    <br>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Item Number</th>
                <th>Name</th>
                <th>Quantity Shipped</th>
            </tr>
        </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.itemNumber }}</td>
                    <td>{{ item.name }}</td>
                    <td>{{ item.quantityShipped }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
