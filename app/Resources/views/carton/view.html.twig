{% extends 'base.html.twig' %}

{% block body %}

    <div class="col-lg-12">
        <h1 class="page-header">Carton Lookup</h1>
    </div>

    <br> 

    <ul class="nav nav-tabs">
        <li class="{% if company == 'WTC' %}active{% endif %}">
            <a href="{{ path('carton_index', {company: 'WTC'}) }}">
                Williams Trading
            </a>
        </li>
        <li class="{% if company == 'MFG' %}active{% endif %}">
            <a href="{{ path('carton_index', {company: 'MFG'}) }}">
                MFG
            </a>
        </li>
    </ul>

    <br>

    <form class="form-inline" action="{{ path('carton_view', {company: company}) }}" method="get">
        <div class="form-group">
            <input class="form-control" type="text" name="manifestId" value="{{ manifestId }}">
        </div>
        <button class="btn btn-default" type="submit">Load</button>
    </form>

    <br>

    <table class="table table-striped">

        <thead>
            <tr>
                <th>UCC</th>
                <th>Dimensions</th>
            </tr>
        </thead>
        <tbody>

            {% for carton in cartons %}

                <tr>
                    <td>{{ carton.ucc }}</td>
                    <td>

                        <table class="table table-bordered table-condensed">

                            <tbody>
                                <tr>
                                    <th>Height</th>
                                    <td>{{ carton.packageHeight }}</td>
                                </tr>
                                <tr>
                                    <th>Length</th>
                                    <td>{{ carton.packageLength }}</td>
                                </tr>
                                <tr>
                                    <th>Width</th>
                                    <td>{{ carton.packageWidth }}</td>
                                </tr>
                                <tr>
                                    <th>Weight</th>
                                    <td>{{ carton.shippingWeight }}</td>
                                </tr>                           
                            </tbody>

                        </table>

                    </td>

                </tr>

            {% endfor %}
        </tbody>
    </table>

{% endblock %}
